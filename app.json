{
  "expo": {
    "name": "Realm Walker",
    "slug": "realm-walker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "realmwalker",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.realmwalker.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Realm Walker needs your location to claim territory blocks and track your adventure.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Realm Walker uses your location to track your journey and claim blocks even when the app is in the background."
      }
    },
    "android": {
      "package": "com.realmwalker.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Realm Walker to use your location to claim territory blocks.",
          "locationAlwaysPermission": "Allow Realm Walker to track your location in the background.",
          "locationWhenInUsePermission": "Allow Realm Walker to use your location while using the app."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "09c68f3c-2a96-4d40-a907-feae3a6f9926"
      }
    }
  }
}
